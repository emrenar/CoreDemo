@model IEnumerable<EntityLayer.Concrete.Comment>


	@if (Model.Count()==0)
{
	<h4>Hiç Yorum Yapılmamış. İlk Yorumu Sen Yap</h4>
}
else
{
		<h4>Yorumlar</h4>
}
<div class="comment-top">
						
						@foreach (var item in Model)
	{
		
						<div class="media">
							<img src="~/CoreBlogTema-main/web/images/t1.jpg" alt="" class="img-fluid" />
							<div class="media-body">
								<h5 class="mt-0">@item.CommentUserName</h5>
								<p>@item.CommentContent</p>							
							</div>
						</div>
	}
					</div>
