
@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>

<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Konu</th>
		<th>Gönderen</th>
		<th>Tarih</th>
		<th>Mesajı Aç</th>
	
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.MessageID</th>
			<td>@item.Subject</td>
			<td>@item.SenderUser.WriterName</td>
			<td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
			<td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a></td>
				

			@*@if (item.MessageStatus)
			{
				<td><span class="badge badge-success">Aktif</span></td>
			}
			else
			{
				<td><span class="badge badge-secondary">Pasif</span></td>
			}*@
			
		</tr>
	}
</table>
